# IT-ERA Blog Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_PATH=./database.sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=24h

# Session Configuration  
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Email Configuration (for notifications)
ADMIN_EMAIL=admin@it-era.it

# n8n Webhook Configuration
N8N_WEBHOOK_SECRET=change-me-in-production
N8N_ENABLED=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# IT-ERA Company Information
COMPANY_NAME=IT-ERA
COMPANY_PHONE=039 888 2041
COMPANY_ADDRESS=Viale Risorgimento 32, Vimercate MB
COMPANY_EMAIL=info@it-era.it
COMPANY_PIVA=10524040966
COMPANY_WEBSITE=https://it-era.it

# Blog Configuration
BLOG_POSTS_PER_PAGE=10
BLOG_MAX_UPLOAD_SIZE=5MB
BLOG_UPLOAD_PATH=./uploads/
BLOG_DEFAULT_AUTHOR=IT-ERA Team

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Analytics
ANALYTICS_ENABLED=true

# Cloudflare Workers (if deploying to Cloudflare)
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_API_TOKEN=your-api-token