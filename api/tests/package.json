{
  "name": "it-era-admin-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for IT-ERA admin panel",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:security": "jest tests/security",
    "test:performance": "jest tests/performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:report": "jest --coverage && npm run test:e2e && npm run test:performance",
    "lint": "eslint tests/**/*.js",
    "format": "prettier --write tests/**/*.js"
  },
  "dependencies": {
    "puppeteer": "^21.6.1",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "form-data": "^4.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/puppeteer": "^7.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "jest-html-reporter": "^3.10.2",
    "performance-now": "^2.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/utils/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/fixtures/**",
      "!tests/utils/setup.js",
      "!tests/reports/**"
    ],
    "coverageDirectory": "tests/reports/coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 30000,
    "reporters": [
      "default",
      ["jest-html-reporter", {
        "pageTitle": "IT-ERA Admin Panel Test Report",
        "outputPath": "tests/reports/test-report.html",
        "includeFailureMsg": true,
        "includeSuiteFailure": true
      }]
    ]
  }
}