{
  "dns_configuration": {
    "zone": "it-era.it",
    "records": [
      {
        "type": "CNAME",
        "name": "@",
        "content": "it-era.it",
        "ttl": 1,
        "proxied": true,
        "comment": "Root domain CNAME to Cloudflare Pages",
        "priority": "critical"
      },
      {
        "type": "CNAME",
        "name": "www",
        "content": "it-era.it",
        "ttl": 1,
        "proxied": true,
        "comment": "WWW subdomain canonical redirect",
        "priority": "high"
      },
      {
        "type": "TXT",
        "name": "@",
        "content": "v=spf1 include:_spf.google.com ~all",
        "ttl": 3600,
        "proxied": false,
        "comment": "SPF record for email authentication",
        "priority": "medium"
      },
      {
        "type": "MX",
        "name": "@",
        "content": "aspmx.l.google.com",
        "ttl": 3600,
        "priority": 1,
        "proxied": false,
        "comment": "Google Workspace MX record",
        "mail_priority": "primary"
      }
    ],
    "cloudflare_settings": {
      "development_mode": false,
      "security_level": "medium",
      "cache_level": "aggressive",
      "browser_cache_ttl": 31536000,
      "always_online": true,
      "ipv6": true
    }
  },
  "validation_commands": {
    "dns_propagation": "dig it-era.it",
    "cname_verification": "dig CNAME it-era.it",
    "mx_record_check": "dig MX it-era.it",
    "spf_record_check": "dig TXT it-era.it"
  }
}