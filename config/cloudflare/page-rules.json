{
  "cloudflare_page_rules": {
    "production_redirects": [
      {
        "rule_id": "1",
        "priority": 1,
        "status": "active",
        "targets": [
          {
            "target": "url",
            "constraint": {
              "operator": "matches",
              "value": "it-era.it/*"
            }
          }
        ],
        "actions": [
          {
            "id": "forwarding_url",
            "value": {
              "url": "https://it-era.it/$1",
              "status_code": 301
            }
          }
        ],
        "description": "Redirect Cloudflare Pages to production domain with 301 permanent redirect"
      },
      {
        "rule_id": "2",
        "priority": 2,
        "status": "active",
        "targets": [
          {
            "target": "url",
            "constraint": {
              "operator": "matches",
              "value": "www.it-era.it/*"
            }
          }
        ],
        "actions": [
          {
            "id": "forwarding_url",
            "value": {
              "url": "https://it-era.it/$1",
              "status_code": 301
            }
          }
        ],
        "description": "Canonical redirect from www subdomain to root domain"
      },
      {
        "rule_id": "3",
        "priority": 3,
        "status": "active",
        "targets": [
          {
            "target": "url",
            "constraint": {
              "operator": "matches",
              "value": "http://it-era.it/*"
            }
          }
        ],
        "actions": [
          {
            "id": "always_use_https",
            "value": "on"
          }
        ],
        "description": "Force HTTPS redirect for all HTTP requests"
      }
    ],
    "configuration_notes": {
      "total_rules": 3,
      "max_free_rules": 3,
      "rule_evaluation": "priority_based",
      "wildcard_support": true,
      "status_codes": {
        "301": "Permanent redirect - preserves SEO value",
        "302": "Temporary redirect - not recommended for production"
      }
    }
  }
}