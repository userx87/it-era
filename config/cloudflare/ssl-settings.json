{
  "ssl_tls_configuration": {
    "encryption_mode": "full_strict",
    "description": "End-to-end encryption with certificate verification",
    "settings": {
      "always_use_https": true,
      "automatic_https_rewrites": true,
      "opportunistic_encryption": true,
      "onion_routing": false,
      "tls_1_3": true,
      "minimum_tls_version": "1.2",
      "certificate_transparency_monitoring": true
    },
    "edge_certificates": {
      "universal_ssl": true,
      "certificate_authority": "google",
      "certificate_type": "universal",
      "wildcard_coverage": true,
      "validity_period": "90_days_auto_renewal"
    },
    "origin_certificates": {
      "create_origin_certificate": true,
      "hostnames": ["it-era.it", "*.it-era.it"],
      "certificate_validity": "15_years",
      "key_type": "rsa_2048",
      "certificate_authority": "cloudflare_origin_ca"
    },
    "hsts_settings": {
      "enabled": true,
      "max_age": 31536000,
      "include_subdomains": true,
      "preload": true,
      "no_sniff": true
    },
    "security_headers": {
      "expect_ct": {
        "enabled": true,
        "max_age": 86400,
        "enforce": true,
        "report_uri": ""
      },
      "certificate_transparency": {
        "enabled": true,
        "reporting": true
      }
    }
  },
  "verification_urls": {
    "ssl_labs_test": "https://www.ssllabs.com/ssltest/analyze.html?d=it-era.it",
    "security_headers_test": "https://securityheaders.com/?q=https%3A%2F%2Fit-era.it",
    "certificate_transparency": "https://crt.sh/?q=it-era.it"
  }
}