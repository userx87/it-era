# IT-ERA Environment Configuration Example
# Copia questo file in .env e modifica con le tue credenziali

# Database
IT_ERA_DB_PATH=/Users/andreapanzeri/progetti/IT-ERA/database/it_era.db

# Flask Web App
FLASK_ENV=development
FLASK_SECRET_KEY=change-this-in-production-with-random-string
PORT=5000

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_app_password

# API Keys - Sostituisci con le tue credenziali reali
HUBSPOT_API_TOKEN=your_hubspot_token_here
BITDEFENDER_API_KEY=your_bitdefender_key_here

# Microsoft Dynamics 365
DYNAMICS_TENANT_ID=your_tenant_id_here
DYNAMICS_CLIENT_ID=your_client_id_here
DYNAMICS_CLIENT_SECRET=your_client_secret_here

# Wasabi Cloud Storage
WASABI_ENDPOINT=https://s3.wasabisys.com
WASABI_ACCESS_KEY=your_wasabi_access_key
WASABI_SECRET_KEY=your_wasabi_secret_key
WASABI_BUCKET=your_bucket_name

# AWS (se usato al posto di Wasabi)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=eu-west-1

# Redis (per caching avanzato)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=itera_redis_2024
REDIS_DB=0

# MySQL/MariaDB (se usato al posto di SQLite)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=it_era
MYSQL_USER=itera_user
MYSQL_PASSWORD=itera_pass_2024
MYSQL_ROOT_PASSWORD=itera_root_2024

# Monitoring e Alerting
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# Sicurezza
ENCRYPTION_KEY_PATH=/Users/andreapanzeri/progetti/IT-ERA/config/.backup_key
LOG_ENCRYPTION=false

# Notifiche avanzate (opzionali)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK
WHATSAPP_API_TOKEN=your_whatsapp_token

# Configurazioni specifiche Bulltech
BULLTECH_COMPANY_ID=bulltech_it
BULLTECH_DEFAULT_TECHNICIAN=andrea.panzeri
BULLTECH_DEFAULT_HOURLY_RATE=75.00
BULLTECH_SLA_RESPONSE_HOURS=4
