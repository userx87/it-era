{
  "name": "it-era",
  "version": "2.0.0",
  "description": "IT-ERA - Assistenza IT Professionale in Lombardia",
  "main": "api/index.js",
  "scripts": {
    "dev": "vercel dev",
    "build": "node scripts/build-for-github-pages.js",
    "build:github-pages": "node scripts/build-for-github-pages.js",
    "start": "node api/index.js",
    "test": "jest",
    "test:claude-flow": "jest tests/claude-flow --verbose",
    "test:integration": "jest tests/claude-flow/integration.test.js --verbose",
    "test:unit": "jest tests/claude-flow --ignore=**/integration.test.js --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ejs --fix",
    "format": "prettier --write .",
    "sitemap:generate": "node utils/sitemap-generator.js",
    "deploy": "vercel --prod",
    "claude-flow": "node cli/claude-flow.js",
    "claude-flow:dashboard": "echo 'Claude Flow Dashboard available at /claude-flow/dashboard.html'"
  },
  "keywords": [
    "it-era",
    "assistenza-it",
    "lombardia",
    "node.js",
    "express",
    "vercel",
    "serverless"
  ],
  "author": "IT-ERA Team",
  "license": "MIT",
  "dependencies": {
    "@upstash/context7-mcp": "github:upstash/context7",
    "axios": "^1.11.0",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.3.1",
    "helmet": "^7.1.0",
    "inquirer": "^12.9.4",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "ora": "^8.2.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "dotenv": "^17.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.1.0",
    "puppeteer": "^24.19.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
