{
  "name": "it-era-security-system",
  "version": "1.0.0",
  "description": "Enterprise security system for IT-ERA authentication",
  "type": "module",
  "scripts": {
    "build": "npm run build:sitemap && npm run build:headers",
    "build:sitemap": "node scripts/build-sitemap.js",
    "build:headers": "node src/middleware/security.js --generate-headers",
    "lint": "eslint src/ scripts/ --ext .js,.mjs",
    "lint:fix": "eslint src/ scripts/ --ext .js,.mjs --fix",
    "typecheck": "tsc --noEmit --checkJs src/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "preview": "wrangler pages dev web --local",
    "dev": "wrangler pages dev web --local --live-reload",
    "deploy": "npm run build && npx wrangler pages deploy web --project-name it-era --commit-dirty=true",
    "deploy:staging": "npm run build && npx wrangler pages deploy web --project-name it-era-staging --commit-dirty=true",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "lighthouse": "lighthouse-ci autorun",
    "security:audit": "node src/middleware/security.js --audit",
    "security:headers": "node src/middleware/security.js --generate-headers",
    "validate:sitemap": "node scripts/build-sitemap.js --validate",
    "configure-secrets": "node scripts/configure-jwt-secrets.js",
    "configure-secrets:production": "node scripts/configure-jwt-secrets.js --env production",
    "configure-secrets:staging": "node scripts/configure-jwt-secrets.js --env staging",
    "configure-secrets:all": "node scripts/configure-jwt-secrets.js --all-envs",
    "deploy:auth": "node scripts/deploy-secure-auth.js deploy",
    "deploy:auth:production": "node scripts/deploy-secure-auth.js deploy --env production",
    "deploy:auth:staging": "node scripts/deploy-secure-auth.js deploy --env staging",
    "deploy:auth:dry-run": "node scripts/deploy-secure-auth.js deploy --dry-run",
    "health:auth": "node scripts/deploy-secure-auth.js health",
    "health:auth:production": "node scripts/deploy-secure-auth.js health --env production",
    "qa": "npm run lint && npm run test && npm run e2e && npm run lighthouse",
    "qa:puppeteer": "node scripts/qa-puppeteer.js",
    "validate": "node scripts/validate-templates.js"
  },
  "keywords": [
    "security",
    "jwt",
    "authentication",
    "cloudflare",
    "workers"
  ],
  "author": "IT-ERA Security Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241218.0"
  },
  "devDependencies": {
    "chrome-launcher": "^1.2.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "lighthouse": "^12.8.1",
    "playwright": "^1.55.0",
    "puppeteer": "^24.17.0",
    "wrangler": "^3.94.0",
    "http-server": "^14.1.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
