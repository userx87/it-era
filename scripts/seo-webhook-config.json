{
  "webhook_secret": "it-era-seo-secret-2024-change-in-production",
  "site_url": "https://it-era.it",
  "notification_channels": {
    "email": {
      "enabled": true,
      "smtp_host": "smtp.gmail.com",
      "smtp_port": 587,
      "smtp_user": "info@it-era.it",
      "smtp_password": "ENV:SMTP_PASSWORD",
      "recipient": "info@it-era.it"
    },
    "slack": {
      "enabled": false,
      "webhook_url": "ENV:SLACK_WEBHOOK_URL",
      "channel": "#seo-alerts"
    },
    "discord": {
      "enabled": false,
      "webhook_url": "ENV:DISCORD_WEBHOOK_URL"
    },
    "n8n": {
      "enabled": true,
      "webhook_url": "ENV:N8N_WEBHOOK_URL",
      "api_key": "ENV:N8N_API_KEY"
    }
  },
  "search_engines": {
    "google": {
      "ping_url": "https://www.google.com/ping?sitemap=",
      "indexing_api": {
        "enabled": false,
        "api_key": "ENV:GOOGLE_INDEXING_API_KEY",
        "daily_quota": 200
      }
    },
    "bing": {
      "ping_url": "https://www.bing.com/ping?sitemap=",
      "indexing_api": {
        "enabled": false,
        "api_key": "ENV:BING_INDEXING_API_KEY"
      }
    },
    "yandex": {
      "ping_url": "https://webmaster.yandex.com/ping?sitemap="
    }
  },
  "cdn": {
    "cloudflare": {
      "enabled": true,
      "api_token": "ENV:CLOUDFLARE_API_TOKEN",
      "zone_id": "ENV:CLOUDFLARE_ZONE_ID"
    }
  },
  "performance": {
    "max_concurrent_requests": 5,
    "request_timeout": 30,
    "rate_limit_delay": 500,
    "max_pages_per_request": 10
  },
  "audit_settings": {
    "default_scope": "sample",
    "sample_pages": [
      "/",
      "/assistenza-it-milano.html",
      "/cloud-storage-milano.html", 
      "/sicurezza-informatica-milano.html"
    ],
    "critical_issues_threshold": 5,
    "warning_threshold": 10
  },
  "monitoring": {
    "health_check_interval": 300,
    "performance_check_interval": 3600,
    "comprehensive_audit_interval": 604800
  },
  "logging": {
    "level": "INFO",
    "max_file_size": "10MB",
    "max_files": 30,
    "include_request_body": false
  }
}