{
  "analytics": {
    "ga4": {
      "measurementId": "G-T5VWN9EH21",
      "enabled": true,
      "environments": ["production", "staging"],
      "features": {
        "enhancedEcommerce": false,
        "linkAttribution": true,
        "pageView": true,
        "eventTracking": true
      },
      "customDimensions": {
        "city_target": "custom_parameter_2",
        "service_type": "custom_parameter_1",
        "user_type": "custom_parameter_3"
      }
    },
    "gtm": {
      "containerId": "GTM-KPF3JZT",
      "enabled": true,
      "environments": ["production"]
    }
  },
  "chatbot": {
    "enabled": true,
    "environments": ["production", "staging", "development"],
    "config": {
      "apiEndpoint": "/api/src/chatbot/api/chatbot-worker.js",
      "widgetScript": "/api/src/chatbot/widget/chat-widget.js",
      "position": "bottom-right",
      "theme": "it-era",
      "autoInit": true,
      "greeting": {
        "default": "Ciao! Sono l'assistente IT-ERA. Come posso aiutarti?",
        "assistenza-it": "Hai bisogno di assistenza IT? Chiedimi pure!",
        "sicurezza-informatica": "Vuoi proteggere la tua azienda? Posso aiutarti!",
        "cloud-storage": "Interessato al cloud storage? Dimmi di pi√π!",
        "commercialisti": "Servizi IT per commercialisti? Sono qui per aiutarti!",
        "studi-legali": "Soluzioni IT per studi legali? Parliamone!"
      }
    },
    "security": {
      "allowedOrigins": [
        "https://it-era.it",
        "https://*.it-era.it",
        "http://localhost:*",
        "http://127.0.0.1:*"
      ],
      "rateLimit": {
        "messages": 10,
        "windowMs": 60000
      }
    }
  },
  "contact": {
    "phone": "039 888 2041",
    "email": "info@it-era.it",
    "address": "Viale Risorgimento 32, Vimercate MB",
    "piva": "10524040966",
    "social": {
      "linkedin": "https://www.linkedin.com/company/it-era",
      "facebook": "https://www.facebook.com/iterait"
    }
  },
  "seo": {
    "sitemap": {
      "enabled": true,
      "frequency": "weekly",
      "priority": {
        "homepage": 1.0,
        "services": 0.9,
        "cities": 0.8,
        "sectors": 0.8,
        "blog": 0.7
      }
    },
    "robots": {
      "allow": ["*"],
      "disallow": ["/admin", "/api", "/test"],
      "sitemap": "https://it-era.it/sitemap.xml"
    }
  },
  "security": {
    "headers": {
      "hsts": true,
      "nosniff": true,
      "xssProtection": true,
      "frameOptions": "SAMEORIGIN",
      "csp": {
        "enabled": true,
        "directives": {
          "default-src": ["'self'"],
          "script-src": ["'self'", "'unsafe-inline'", "https://www.googletagmanager.com", "https://www.google-analytics.com"],
          "style-src": ["'self'", "'unsafe-inline'", "https://fonts.googleapis.com"],
          "font-src": ["'self'", "https://fonts.gstatic.com"],
          "img-src": ["'self'", "data:", "https://www.google-analytics.com"],
          "connect-src": ["'self'", "https://www.google-analytics.com"]
        }
      }
    }
  }
}