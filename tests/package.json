{
  "name": "it-era-robust-testing",
  "version": "1.0.0",
  "description": "Comprehensive Puppeteer testing utilities for IT-ERA",
  "main": "run-robust-test-suite.js",
  "scripts": {
    "test": "node run-robust-test-suite.js",
    "test:chatbot": "node robust-chatbot-test.js",
    "test:debug": "jest production-debug-test.js --verbose --detectOpenHandles",
    "test:production": "node run-robust-test-suite.js --production-only",
    "test:staging": "node run-robust-test-suite.js --staging-only",
    "test:functionality": "node run-robust-test-suite.js --functionality-only",
    "test:performance": "node run-robust-test-suite.js --performance-only",
    "test:network": "node run-robust-test-suite.js --network-only",
    "test:parallel": "node run-robust-test-suite.js --parallel",
    "test:quick": "node run-robust-test-suite.js --production-only --functionality-only --no-retry"
  },
  "dependencies": {
    "puppeteer": "^24.17.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "IT-ERA Development Team",
  "license": "MIT"
}
