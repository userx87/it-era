{
  "name": "it-era-chatbot-ui-tests",
  "version": "1.0.0",
  "description": "Comprehensive UI Testing Suite for IT-ERA Swarm Chatbot",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose --detectOpenHandles",
    "test:ui": "jest ui-responsiveness.test.js --verbose",
    "test:chatbot": "jest chatbot-interface.test.js --verbose",
    "test:admin": "jest admin-panel.test.js --verbose",
    "test:flow": "jest interaction-flow.test.js --verbose",
    "test:performance": "jest performance-ui.test.js --verbose",
    "test:accessibility": "jest accessibility.test.js --verbose",
    "test:all": "jest --verbose --detectOpenHandles --runInBand",
    "report": "node generate-report.js"
  },
  "dependencies": {
    "puppeteer": "^21.0.0",
    "jest": "^29.0.0",
    "jest-environment-node": "^29.0.0",
    "axe-core": "^4.8.0",
    "lighthouse": "^11.0.0",
    "sharp": "^0.32.0",
    "fs-extra": "^11.0.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 60000,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "**/*.test.js"
    ]
  }
}