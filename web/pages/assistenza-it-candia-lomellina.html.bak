    }
}

.it-era-slide-up {
    animation: it-era-slide-up 0.3s ease-out;
}
</style>
<!-- IT-ERA Chatbot - HTML Structure -->
<div id="it-era-chatbot-container">
<!-- Chat Button -->
<button id="it-era-chatbot-button" title="Chatta con IT-ERA">
<!-- Chat Icon -->
<svg viewbox="0 0 24 24">
<path d="M20 2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h4l4 4 4-4h4c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-2 12H6v-2h12v2zm0-3H6V9h12v2zm0-3H6V6h12v2z"></path>
</svg>
<!-- Notification badge (hidden by default) -->
<span class="it-era-notification-badge" id="it-era-notification" style="display: none;">1</span>
</button>
<!-- Chat Window -->
<div id="it-era-chatbot-window">
<div class="it-era-chat-header">
<div>
<h3>IT-ERA Assistenza</h3>
<div class="company-info">039 888 2041 • Vimercate (MB)</div>
</div>
<button class="it-era-close-btn" id="it-era-close-chat">×</button>
</div>
<div class="it-era-messages" id="it-era-messages">
<!-- Messages will be added here -->
</div>
<div class="it-era-input-area">
<input class="it-era-message-input" id="it-era-message-input" maxlength="500" placeholder="Scrivi un messaggio..." type="text"/>
<button class="it-era-send-btn" id="it-era-send-btn">
<svg fill="currentColor" height="16" viewbox="0 0 24 24" width="16">
<path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"></path>
</svg>
</button>
</div>
</div>
</div>
<!-- IT-ERA Chatbot - JavaScript -->
<script>
(function() {
    'use strict';
    
    // ⚠️ IMPORTANTE: Aggiorna questo endpoint con il tuo worker deployato!
    const API_ENDPOINT = 'https://it-era-chatbot-prod.bulltech.workers.dev/api/chat';
    
    // Configurazione 
    const CONFIG = {
        autoOpen: false,        // true = si apre dopo 10 secondi
        showOnMobile: true,     // false = nasconde su mobile  
        trackEvents: true,      // Google Analytics tracking
        debug: false            // console logs dettagliati
    };
    
    let chatSession = null;
    let isOpen = false;
    
    // Initialize chatbot when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initChatbot);
    } else {
        initChatbot();
    }
    
    function initChatbot() {
        setupEventListeners();
        
        // Auto-open dopo 10 secondi se configurato
        if (CONFIG.autoOpen) {
            setTimeout(() => {
                showNotification();
            }, 10000);
        }
        
        if (CONFIG.debug) {
            console.log('✅ IT-ERA Chatbot initialized');
        }
    }
    
    function setupEventListeners() {
        const button = document.getElementById('it-era-chatbot-button');
        const closeBtn = document.getElementById('it-era-close-chat');
        const input = document.getElementById('it-era-message-input');
        const sendBtn = document.getElementById('it-era-send-btn');
        
        button.addEventListener('click', toggleChat);
        closeBtn.addEventListener('click', closeChat);
        sendBtn.addEventListener('click', sendMessage);
        
        input.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                sendMessage();
            }
        });
    }
    
    function toggleChat() {
        if (isOpen) {
            closeChat();
        } else {
            openChat();
        }
    }
    
    function openChat() {
        const window = document.getElementById('it-era-chatbot-window');
        const notification = document.getElementById('it-era-notification');
        const button = document.getElementById('it-era-chatbot-button');
        
        window.style.display = 'flex';
        window.classList.add('it-era-slide-up');
        isOpen = true;
        
        // Nascondi notifica
        notification.style.display = 'none';
        button.classList.remove('it-era-pulse');
        
        // Inizia conversazione se prima volta
        if (!chatSession) {
            startConversation();
        }
        
        // Focus input
        document.getElementById('it-era-message-input').focus();
        
        trackEvent('chatbot_opened');
    }
    
    function closeChat() {
        const window = document.getElementById('it-era-chatbot-window');
        window.style.display = 'none';
        isOpen = false;
        
        trackEvent('chatbot_closed');
    }
    
    function showNotification() {
        const notification = document.getElementById('it-era-notification');
        const button = document.getElementById('it-era-chatbot-button');
        
        notification.style.display = 'block';
        button.classList.add('it-era-pulse');
    }
    
    async function startConversation() {
        showTyping();
        
        try {
            const response = await fetch(API_ENDPOINT, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    action: 'start',
                    page: window.location.pathname
                })
            });
            
            const data = await response.json();
            hideTyping();
            
            if (data.success) {
                chatSession = data.sessionId;
                addMessage('bot', data.response, data.options);
            } else {
                addMessage('bot', 'Ciao! Sono l\'assistente IT-ERA. Per assistenza immediata chiama: 039 888 2041');
            }
            
        } catch (error) {
            hideTyping();
            addMessage('bot', 'Problemi di connessione. Contattaci al 039 888 2041 o info@it-era.it');
            console.error('Chatbot error:', error);
        }
    }
    
    async function sendMessage() {
        const input = document.getElementById('it-era-message-input');
        const message = input.value.trim();
        
        if (!message) return;
        
        addMessage('user', message);
        input.value = '';
        showTyping();
        
        try {
            const response = await fetch(API_ENDPOINT, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    action: 'message',
                    message: message,
                    sessionId: chatSession
                })
            });
            
            const data = await response.json();
            hideTyping();
            
            if (data.success) {
                addMessage('bot', data.response, data.options);
                
                if (data.escalate) {
                    setTimeout(() => {
                        addMessage('bot', '📞 Ti ricontatteremo entro 24 ore. Per urgenze: 039 888 2041');
                    }, 1000);
                }
            } else {
                addMessage('bot', 'Scusa, problema tecnico. Chiama 039 888 2041 per assistenza.');
            }
            
        } catch (error) {
            hideTyping();
            addMessage('bot', 'Errore di connessione. Chiama 039 888 2041');
            console.error('Send error:', error);
        }
        
        trackEvent('message_sent');
    }
    
    function addMessage(type, content, options = null) {
        const container = document.getElementById('it-era-messages');
        
        const messageDiv = document.createElement('div');
        messageDiv.className = `it-era-message ${type}`;
        
        const bubble = document.createElement('div');
        bubble.className = 'it-era-message-bubble';
        bubble.innerHTML = content.replace(/\n/g, '<br>');
        
        messageDiv.appendChild(bubble);
        
        // Add option buttons
        if (type === 'bot' && options && options.length > 0) {
            const optionsDiv = document.createElement('div');
            optionsDiv.className = 'it-era-options';
            
            options.forEach(option => {
                const btn = document.createElement('button');
                btn.className = 'it-era-option-btn';
                btn.textContent = option;
                btn.addEventListener('click', () => {
                    document.getElementById('it-era-message-input').value = option;
                    sendMessage();
                });
                optionsDiv.appendChild(btn);
            });
            
            messageDiv.appendChild(optionsDiv);
        }
        
        container.appendChild(messageDiv);
        container.scrollTop = container.scrollHeight;
    }
    
    function showTyping() {
        const container = document.getElementById('it-era-messages');
        const typingDiv = document.createElement('div');
        typingDiv.className = 'it-era-message bot';
        typingDiv.id = 'typing-indicator';
        
        const typing = document.createElement('div');
        typing.className = 'it-era-typing';
        typing.innerHTML = '<div class="it-era-typing-dot"></div><div class="it-era-typing-dot"></div><div class="it-era-typing-dot"></div>';
        
        typingDiv.appendChild(typing);
        container.appendChild(typingDiv);
        container.scrollTop = container.scrollHeight;
    }
    
    function hideTyping() {
        const indicator = document.getElementById('typing-indicator');
        if (indicator) indicator.remove();
    }
    
    function trackEvent(eventName, properties = {}) {
        if (!CONFIG.trackEvents) return;
        
        // Google Analytics 4
        if (typeof gtag !== 'undefined') {
            gtag('event', eventName, {
                event_category: 'chatbot',
                page_location: window.location.href
            });
        }
        
        if (CONFIG.debug) {
            console.log('📊 Event:', eventName, properties);
        }
    }
    
    // Global API for external control
    window.ITERAChatbot = {
        open: openChat,
        close: closeChat,
        isOpen: () => isOpen,
        sendMessage: (msg) => {
            document.getElementById('it-era-message-input').value = msg;
            sendMessage();
        }
    };
    
})();
</script>
</body>
</html>