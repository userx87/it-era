                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script>
        // FAQ Toggle
        document.querySelectorAll('.medical-faq-question').forEach(button => {
            button.addEventListener('click', () => {
                const answer = button.nextElementSibling;
                const icon = button.querySelector('i');
                
                answer.classList.toggle('active');
                icon.classList.toggle('fa-chevron-down');
                icon.classList.toggle('fa-chevron-up');
            });
        });

        // Medical Form Submission
        document.getElementById('medicalLeadForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            
            // Add medical-specific data
            data.sector_page = 'Studi Medici';
            data.source = 'Medical Sector Page';
            data.timestamp = new Date().toISOString();
            data.compliance_priority = 'GDPR';
            
            try {
                const response = await fetch('/api/leads', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Grazie! Ti ricontatteremo entro 2 ore per la tua analisi GDPR gratuita.');
                    e.target.reset();
                    
                    // Track medical conversion
                    if (typeof gtag !== 'undefined') {
                        gtag('event', 'conversion', {
                            'send_to': 'AW-CONVERSION_ID/MEDICAL_CONVERSION',
                            'event_category': 'medical_lead',
                            'event_label': 'studi-medici-page'
                        });
                    }
                } else {
                    throw new Error('Errore nell\'invio');
                }
            } catch (error) {
                alert('Errore nell\'invio. Chiama direttamente il 039 888 2041');
                console.error('Medical form submission error:', error);
            }
        });

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // GDPR Badge Animation
        const gdprBadge = document.querySelector('.compliance-badge');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'pulse 2s infinite';
                }
            });
        });
        
        if (gdprBadge) {
            observer.observe(gdprBadge);
        }
    </script>
</body>
</html>